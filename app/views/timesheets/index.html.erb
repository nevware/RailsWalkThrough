<p id="notice"><%= notice %></p>

<h1>Timesheets</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Unit</th>
      <th>Assignment</th>
      <th>Status</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.amount %></td>
        <td><%= timesheet.unit %></td>
        <td><%= timesheet.assignment_id %></td>
        <td><%= timesheet.status %></td>
        <td><%= timesheet.start_date %></td>
        <td><%= timesheet.end_date %></td>
        <td><%= link_to 'Show', timesheet %></td>
        <td><%= link_to 'Edit', edit_timesheet_path(timesheet) %></td>
        <td><%= link_to 'Destroy', timesheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

